{
  "name": "homehive-api",
  "script": "server.js",
  "instances": 1,
  "autorestart": true,
  "watch": true,
  "watch_delay": 1000,
  "ignore_watch": ["node_modules", ".git", "*.log"],
  "env": {
    "NODE_ENV": "development",
    "PORT": 3001
  },
  "env_production": {
    "NODE_ENV": "production",
    "PORT": 8000
  },
  "error_file": "./logs/err.log",
  "out_file": "./logs/out.log",
  "log_file": "./logs/combined.log",
  "time": true,
  "max_memory_restart": "1G",
  "node_args": "--max-old-space-size=4096"
}
