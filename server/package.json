{
  "name": "home-hive-server",
  "version": "1.0.0",
  "description": "HomeHive Backend API Server",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "dev:nodemon": "nodemon server.js",
    "dev:watch": "node --watch server.js",
    "dev:inspect": "node --inspect --watch server.js",
    "server": "node server.js",
    "server:dev": "node --watch server.js",
    "server:prod": "NODE_ENV=production node server.js",
    "pm2:start": "pm2 start server.js --name homehive-api --watch",
    "pm2:stop": "pm2 stop homehive-api",
    "pm2:restart": "pm2 restart homehive-api",
    "pm2:logs": "pm2 logs homehive-api",
    "kill-port": "npx kill-port 3001",
    "clean-start": "npm run kill-port && npm run dev",
    "health": "curl http://localhost:3001/api/health || echo 'Server not running'",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.18.3",
    "express-rate-limit": "^8.0.1",
    "firebase": "^12.1.0",
    "google-auth-library": "^10.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.17.1",
    "multer": "^2.0.2"
  },
  "devDependencies": {
    "concurrently": "^9.2.0",
    "kill-port": "^2.0.1",
    "nodemon": "^3.1.10",
    "pm2": "^5.4.3"
  },
  "keywords": [
    "nodejs",
    "express",
    "mongodb",
    "jwt",
    "api",
    "homehive"
  ],
  "author": "HomeHive Team",
  "license": "ISC",
  "engines": {
    "node": ">=18.0.0"
  }
}
